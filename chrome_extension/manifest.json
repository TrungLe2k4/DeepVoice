{
  "manifest_version": 3,
  "name": "DeepVoice Attack Guard",
  "description": "Phát hiện dấu hiệu deepfake (giọng nói tổng hợp) trong Google Meet và cảnh báo theo thời gian thực.",
  "version": "0.1.0",
  "action": { "default_title": "DeepVoice Guard" },

  "host_permissions": ["https://meet.google.com/*"],
  "permissions": ["scripting", "activeTab", "storage"],

  "background": { "service_worker": "background.js", "type": "module" },

  "content_scripts": [{
    "matches": ["https://meet.google.com/*"],
    "js": ["content.js"],
    "css": ["overlay.css"],
    "run_at": "document_idle"
  }],

  "web_accessible_resources": [{
    "resources": ["worklet-processor.js", "model.js"],
    "matches": ["https://meet.google.com/*"]
  }]
}
